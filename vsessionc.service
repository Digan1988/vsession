[Unit]
Description=vsessionc

[Service]
ExecStart=/home/vsession/server/server.js
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/vsession/server/

[Install]
WantedBy=multi-user.target